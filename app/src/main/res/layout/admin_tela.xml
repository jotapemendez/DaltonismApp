<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/botaoVoltarLogin"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/retornar_para_tela_de_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <Button
        android:id="@+id/botaoInserirObraTela"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="436dp"
        android:background="@drawable/button_background"
        android:elevation="8dp"
        android:fontFamily="@font/lexend_medium"
        android:text="Adicionar Obra"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botaoGaleria"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/button_background"
        android:elevation="8dp"
        android:fontFamily="@font/lexend_medium"
        android:text="Galeria"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoInserirObraTela"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botaoAlterarObras"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/button_background"
        android:elevation="8dp"
        android:fontFamily="@font/lexend_medium"
        android:text="Alterar Obra"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoInserirObraTela"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botaoRemoverObras"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/button_background"
        android:elevation="8dp"
        android:fontFamily="@font/lexend_medium"
        android:text="Remover Obras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoGaleria" />

</androidx.constraintlayout.widget.ConstraintLayout>